                <li>@Html.ActionLink("Opinie", "StronyStatyczne", "Home", new { nazwa = "Opinie" })</li>
                <li>@Html.ActionLink("Pomoc", "StronyStatyczne", "Home", new { nazwa = "Pomoc" })</li>
                <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Kontakt"})">Kontakt</a></li>
            </ul>
        </nav>
        <div id="footerLogo">
        </div>
        <div id="footerCopyright">
            Copyright &copy; 2018 P. Kursy
        </div>
    </footer>
    @RenderSection("Scripts", required:false)
</body>
</html>
